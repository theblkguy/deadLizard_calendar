{
  "apps": [
    {
      "name": "deadlizard-calendar",
      "script": "server/dist/server.js",
      "cwd": "/opt/deadlizard-calendar",
      "env_file": "/opt/deadlizard-calendar/.env",
      "env": {
        "NODE_ENV": "development"
      },
      "env_production": {
        "NODE_ENV": "production"
      },
      "env_staging": {
        "NODE_ENV": "staging",
        "PORT": "5001"
      },
      "instances": 1,
      "exec_mode": "fork",
      "watch": false,
      "max_memory_restart": "500M",
      "log_file": "./logs/combined.log",
      "out_file": "./logs/out.log",
      "error_file": "./logs/error.log",
      "log_date_format": "YYYY-MM-DD HH:mm:ss Z",
      "merge_logs": true,
      "autorestart": true,
      "restart_delay": 1000,
      "max_restarts": 10,
      "min_uptime": "10s",
      "kill_timeout": 5000,
      "listen_timeout": 8000,
      "shutdown_with_message": true,
      "health_check_grace_period": 3000
    }
  ]
}
